<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarStyle="insideOverlay" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_top_2" >

            <EditText
                android:id="@+id/register_mobile_edittxt"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_mobile_no"
                android:inputType="number"
                android:maxLength="10"
                android:textColorHint="@color/drak_gray" >
            </EditText>

            <EditText
                android:id="@+id/register_password"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_password"
                android:inputType="textPassword"
                android:textColorHint="@color/drak_gray" >
            </EditText>

            <EditText
                android:id="@+id/register_confirm_password"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/change_confirm_password"
                android:inputType="textPassword"
                android:textColorHint="@color/drak_gray" >
            </EditText>

            <EditText
                android:id="@+id/register_firstname_edittxt"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_first_name"
                android:inputType="textCapSentences"
                android:textColorHint="@color/drak_gray" >
            </EditText>

            <EditText
                android:id="@+id/register_lastname_edittxt"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_last_name"
                android:inputType="textCapSentences"
                android:textColorHint="@color/drak_gray" >
            </EditText>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/margin_top_10" >

                <com.android.handyman.view.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:text="@string/register_gender"
                    android:textColor="@color/drak_gray"
                    android:textSize="@dimen/venue_header_text_size"
                    app:customFont="@string/font_regular" />

                <LinearLayout
                    android:id="@+id/male_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/male_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/radio_normal"
                        android:contentDescription="@string/register_gender_male" />

                    <com.android.handyman.view.TextViewPlus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/register_gender_male"
                        android:textColor="@color/drak_gray"
                        android:textSize="@dimen/venue_header_text_size"
                        app:customFont="@string/font_regular" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/female_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/female_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/radio_normal"
                        android:contentDescription="@string/register_gender_female" />

                    <com.android.handyman.view.TextViewPlus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/register_gender_female"
                        android:textColor="@color/drak_gray"
                        android:textSize="@dimen/venue_header_text_size"
                        app:customFont="@string/font_regular" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/register_birthdate"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/register_gender_birthdate"
                android:textColorHint="@color/drak_gray" >
            </EditText>

            <EditText
                android:id="@+id/register_emailid"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/drak_gray" >
            </EditText>

            <EditText
                android:id="@+id/register_whatsappid"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_whatsup_id"
                android:inputType="number"
                android:maxLength="10"
                android:textColorHint="@color/drak_gray" >
            </EditText>

            <EditText
                android:id="@+id/register_qualification"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_qualification"
                android:inputType="textCapSentences"
                android:textColorHint="@color/drak_gray"
                android:visibility="gone" >
            </EditText>

            <EditText
                android:id="@+id/register_experience"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_experience"
                android:inputType="textCapSentences"
                android:textColorHint="@color/drak_gray"
                android:visibility="gone" >
            </EditText>

            <EditText
                android:id="@+id/register_provider"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_provider"
                android:inputType="textCapSentences"
                android:textColorHint="@color/drak_gray"
                android:visibility="gone" >
            </EditText>

            <EditText
                android:id="@+id/register_address"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_address"
                android:inputType="textCapSentences"
                android:textColorHint="@color/drak_gray" >
            </EditText>

            <EditText
                android:id="@+id/register_street"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_street_road"
                android:inputType="textCapSentences"
                android:textColorHint="@color/drak_gray" >
            </EditText>

            <EditText
                android:id="@+id/register_landmark"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_landmark"
                android:inputType="textCapSentences"
                android:textColorHint="@color/drak_gray" >
            </EditText>

            <EditText
                android:id="@+id/register_state"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_arrow_down"
                android:ems="10"
                android:hint="@string/register_state"
                android:inputType="textCapSentences"
                android:textColorHint="@color/drak_gray"
                android:visibility="gone" >
            </EditText>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Spinner
                    android:id="@+id/register_spinner_state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@drawable/input_border" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:paddingRight="@dimen/margin_top_1"
                    android:src="@drawable/icon_arrow_down" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Spinner
                    android:id="@+id/register_spinner_city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@drawable/input_border" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:paddingRight="@dimen/margin_top_1"
                    android:src="@drawable/icon_arrow_down" />
            </FrameLayout>

            <EditText
                android:id="@+id/register_city"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_arrow_down"
                android:ems="10"
                android:hint="@string/register_city"
                android:textColorHint="@color/drak_gray"
                android:visibility="gone" >
            </EditText>

            <EditText
                android:id="@+id/register_pincode"
                style="@style/LoginEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:ems="10"
                android:hint="@string/register_pincode"
                android:inputType="number"
                android:maxLength="6"
                android:textColorHint="@color/drak_gray" >
            </EditText>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal"
                android:padding="@dimen/margin_top_10"
                android:visibility="gone"
                android:weightSum="1" >

                <com.android.handyman.view.TextViewPlus
                    android:id="@+id/profile_txt1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:text="@string/register_profile_pic"
                    android:textColor="@color/drak_gray"
                    android:textSize="@dimen/venue_header_text_size"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <LinearLayout
                    android:id="@+id/image_layout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_top"
                    android:layout_weight="0.4"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/profile_image1"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/avtar_images" />
                </LinearLayout>

                <com.android.handyman.view.TextViewPlus
                    android:id="@+id/browserbtn1"
                    style="@style/ButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_top_2"
                    android:layout_marginRight="@dimen/margin_top_2"
                    android:layout_weight="0.6"
                    android:text="@string/register_browser"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margin_top_2"
                    app:customFont="@string/font_regular" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:padding="@dimen/margin_top_10" >

                <com.android.handyman.view.TextViewPlus
                    android:id="@+id/profile_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/register_profile_pic"
                    android:textColor="@color/drak_gray"
                    android:textSize="@dimen/venue_header_text_size"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <LinearLayout
                    android:id="@+id/image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/avtar_images" />
                </LinearLayout>

                <com.android.handyman.view.TextViewPlus
                    android:id="@+id/browserbtn"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_top_2"
                    android:layout_marginRight="@dimen/margin_top_10"
                    android:text="@string/register_browser"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margin_top_2"
                    app:customFont="@string/font_regular" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/chk_box_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/terms_and_conditon_checkbox"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:button="@drawable/single_checkbox_choice"
                    android:padding="@dimen/margin_top_10"
                    android:text="@string/register_agree_text"
                    android:textColor="@color/drak_gray"
                    android:textSize="@dimen/calender_day_textsize" />

                <com.android.handyman.view.TextViewPlus
                    android:id="@+id/register_privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-5dp"
                    android:text="@string/register_privacy_policy"
                    android:textColor="#00F"
                    android:textSize="@dimen/calender_day_textsize"
                    app:customFont="@string/font_regular" />

                <com.android.handyman.view.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" &amp; "
                    android:textColor="@color/subcategory_color"
                    android:textSize="@dimen/calender_day_textsize"
                    app:customFont="@string/font_regular" />

                <com.android.handyman.view.TextViewPlus
                    android:id="@+id/terms_and_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/register_agree_terms_condition"
                    android:textColor="#00F"
                    android:textSize="@dimen/calender_day_textsize"
                    app:customFont="@string/font_regular" />
            </LinearLayout>

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/register_signup_Button"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                app:customFont="@string/font_medium" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>