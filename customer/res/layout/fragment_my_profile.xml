<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_top_2" >

        <ImageView
            android:id="@+id/my_profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/avtar_images"
            android:visibility="gone" />

        <com.android.handyman.view.TextViewPlus
            android:id="@+id/my_name_profile_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:text=""
            android:textColor="@color/menu_text_color"
            android:textSize="@dimen/margin_top_2"
            app:customFont="@string/font_regular" />

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin_top_10"
            android:background="@color/subcategory_color"
            android:visibility="gone" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:id="@+id/profil_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_top_10"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_top_10"
            android:paddingLeft="@dimen/margin_top_10"
            android:paddingRight="@dimen/margin_top_10" >

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/mobile_number_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/hire_mobile_number"
                android:textColor="@color/title_color"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/my_profile_mobile_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/hire_mobile_number"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/gender_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/register_gender"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/my_profile_gender_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/register_gender"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/birthday_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/register_gender_birthdate"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/my_profile_birthdate_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/register_gender_birthdate"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/email_id_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/hire_email_id"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/my_profile_email_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/hire_email_id"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/watsapp_id_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/hire_watsapp_id"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/my_profile_watsapp_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/hire_watsapp_id"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/category_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/hire_category"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/my_profile_category_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/hire_category"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/sub_category_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/hire_sub_category"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/my_profile_sub_category_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/hire_sub_category"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.android.handyman.view.TextViewPlus
                android:id="@+id/qulification_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
