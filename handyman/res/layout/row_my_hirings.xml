<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.97"
        android:orientation="vertical"
        android:padding="@dimen/margin_top_10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.android.handy.view.TextViewPlus
                android:id="@+id/text_hire_for_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Hire for: "
                android:textColor="@color/hire_for_color"
                android:textSize="@dimen/margin_top_2"
                app:customFont="@string/font_regular" />

            <com.android.handy.view.TextViewPlus
                android:id="@+id/hire_for_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repaire Fancy Lights"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_2"
                android:singleLine="true"
                app:customFont="@string/font_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.android.handy.view.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="in "
                android:textColor="@color/hire_for_color"
                android:textSize="@dimen/margin_top_1"
                android:textStyle="italic"
                app:customFont="@string/font_thin_italic" />

            <com.android.handy.view.TextViewPlus
                android:id="@+id/category_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electrical"
                android:textColor="@color/drak_green"
                android:textSize="@dimen/calender_day_textsize"
                android:textStyle="italic"
                app:customFont="@string/font_thin_italic" />

            <com.android.handy.view.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" >> "
                android:textColor="@color/hire_for_color"
                android:textSize="@dimen/margin_top_1"
                android:textStyle="italic"
                app:customFont="@string/font_thin_italic" />

            <com.android.handy.view.TextViewPlus
                android:id="@+id/sub_category_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fancy Lights"
                android:textColor="@color/drak_green"
                android:textSize="@dimen/calender_day_textsize"
                android:textStyle="italic"
                app:customFont="@string/font_thin_italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="@dimen/margin_top"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/menu_home"
                android:src="@drawable/icon_calendar" />

            <com.android.handy.view.TextViewPlus
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_weight="1"
                android:text="24/11/2015 "
                android:textColor="@color/hire_for_color"
                android:textSize="@dimen/calender_day_textsize"
                app:customFont="@string/font_italic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/menu_home"
                android:src="@drawable/icon_clock" />

            <com.android.handy.view.TextViewPlus
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_weight="1"
                android:text="10:30 A.M. "
                android:textColor="@color/hire_for_color"
                android:textSize="@dimen/calender_day_textsize"
                app:customFont="@string/font_italic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/menu_home"
                android:src="@drawable/icon_credits_light" />

            <com.android.handy.view.TextViewPlus
                android:id="@+id/credits_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_weight="1"
                android:textColor="@color/hire_for_color"
                android:textSize="@dimen/calender_day_textsize"
                app:customFont="@string/font_italic" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/color_layout"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.03"
        android:orientation="vertical"
        android:padding="@dimen/margin_top_10" >
    </LinearLayout>

</LinearLayout>