<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:padding="@dimen/margin_top_10" >

    <ImageView
        android:id="@+id/adv_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        />

    <com.handyman.view.TextViewPlus
        android:id="@+id/adv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_top_2"
        android:layout_toRightOf="@id/adv_img"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/margin_top_0"
        android:textAllCaps="true"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/subcategory_color"
        android:textSize="@dimen/margin_top_1"
        app:customFont="@string/font_bold" />

    <com.handyman.view.TextViewPlus
        android:id="@+id/adv_descr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_top_10"
        android:layout_marginBottom="@dimen/margin_top"
        android:layout_toRightOf="@id/adv_img"
        android:layout_alignParentBottom="true"
        android:maxLines="2"
        android:visibility="gone"
        android:textColor="@color/subcategory_color"
        android:textSize="@dimen/margin_top_1"
        app:customFont="@string/font_bold" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/margin_top_3"
        android:layout_marginTop="35dp"
        android:visibility="gone"/>

</RelativeLayout>