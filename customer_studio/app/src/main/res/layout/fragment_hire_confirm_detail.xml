<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarStyle="insideOverlay"
        android:paddingBottom="@dimen/margin_top_5">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_top_2">

            <com.handyman.view.TextViewPlus
                android:id="@+id/hire_handyman_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Jackey Kabra"
                android:textColor="@color/handyman_name_color"
                android:textSize="@dimen/margin_top_3"
                app:customFont="@string/font_regular" />

            <com.handyman.view.TextViewPlus
                android:id="@+id/hire_handyman_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="jackey.cmarix"
                android:textColor="@color/subcategory_color"
                android:textSize="@dimen/margin_top_2"
                app:customFont="@string/font_light" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_top_1"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

                <com.handyman.view.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/hire_confirm_text"
                    android:textColor="#666"
                    app:customFont="@string/font_regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profil_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_job_description_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/hire_customer_job_description"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/margin_top_1"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_job_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/hire_customer_job_description"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/margin_top_18"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_date_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_1"
                    android:singleLine="true"
                    android:text="@string/hire_customer_date"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/margin_top_1"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/hire_customer_date"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/margin_top_18"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_time_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_1"
                    android:singleLine="true"
                    android:text="@string/hire_customer_time"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/margin_top_1"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/hire_customer_time"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/margin_top_18"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_contact_person_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_1"
                    android:singleLine="true"
                    android:text="@string/hire_customer_contact_person"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/margin_top_1"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_contact_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/hire_customer_contact_person"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/margin_top_18"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_contact_no_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_1"
                    android:singleLine="true"
                    android:text="@string/hire_customer_contact_no"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/margin_top_1"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_contact_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/hire_customer_contact_no"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/margin_top_18"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_floor_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_1"
                    android:singleLine="true"
                    android:text="@string/hire_customer_floor"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/margin_top_1"
                    android:visibility="gone"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hire_customer_floor"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/margin_top_18"
                    android:visibility="gone"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_apartment_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_1"
                    android:singleLine="true"
                    android:text="@string/hire_customer_apartment"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/margin_top_1"
                    android:visibility="gone"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_apartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hire_customer_apartment"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/margin_top_18"
                    android:visibility="gone"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_address_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_1"
                    android:singleLine="true"
                    android:text="@string/hire_customer_address"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/margin_top_1"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hire_customer_address"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/margin_top_18"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_state_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_1"
                    android:singleLine="true"
                    android:text="@string/hire_customer_state"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/margin_top_1"
                    android:visibility="gone"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hire_customer_state"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/margin_top_18"
                    android:visibility="gone"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_requirment_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_1"
                    android:singleLine="true"
                    android:text="@string/hire_customer_requirment"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/margin_top_1"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

                <com.handyman.view.TextViewPlus
                    android:id="@+id/hire_confirm_requirment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hire_customer_requirment"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/margin_top_18"
                    android:visibility="visible"
                    app:customFont="@string/font_regular" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.handyman.view.TextViewPlus
        android:id="@+id/confirm_your_details_Button"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_2"
        android:layout_alignParentBottom="true"
        android:text="@string/hire_handyman_confirm_your_details"
        android:textColor="@color/white"
        app:customFont="@string/font_medium" />

</RelativeLayout>