<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/service_header_text_size">

        <com.handy.view.TextViewPlus
            android:id="@+id/txtOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#00F"
            android:textSize="@dimen/h_1"
            app:customFont="@string/font_regular" />

        <com.handy.view.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="OTP RECEIVED"
            android:textColor="@color/gray"
            android:textSize="@dimen/service_header_text_size"
            app:customFont="@string/font_regular" />


        <com.handy.view.TextViewPlus
            android:id="@+id/txtApprove"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_10"
            android:padding="@dimen/appointment_name"
            android:text="APPROVE"
            android:textColor="@color/white"
            android:textSize="@dimen/service_header_text_size"
            android:textStyle="bold"
            app:customFont="@string/font_regular" />
    </LinearLayout>


</LinearLayout>