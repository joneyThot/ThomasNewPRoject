<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/college_pic_xxxhdpi"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:id="@+id/animation_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_partner_xxxhdpi" />

        <com.handy.view.TextViewPlus
            android:id="@+id/simple_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_text"
            android:textColor="@color/drak_gray"
            app:customFont="@string/font_medium" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:padding="30dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_top"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="2" >

            <com.handy.view.TextViewPlus
                android:id="@+id/loginbtn"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_top"
                android:layout_weight="1"
                android:padding="@dimen/margin_top"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_top_2"
                app:customFont="@string/font_medium" />

            <com.handy.view.TextViewPlus
                android:id="@+id/signupbtn"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_weight="1"
                android:padding="@dimen/margin_top"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_top_2"
                android:visibility="gone"
                app:customFont="@string/font_medium" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>