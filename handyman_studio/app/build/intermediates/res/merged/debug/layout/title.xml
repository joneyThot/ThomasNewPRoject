<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/titleLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/topbar" >

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_top_10"
        android:src="@drawable/icon_back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iconBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_top_10"
        android:src="@drawable/icon_menu"
        android:visibility="gone" />

    <com.handy.view.TextViewPlus
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/margin_top_2"
        android:visibility="gone"
        app:customFont="@string/font_bold" />

    <com.handy.view.TextViewPlus
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/margin_top_2"
        android:visibility="gone"
        app:customFont="@string/font_bold" />

    <ImageView
        android:id="@+id/menuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_top_1"
        android:src="@drawable/sidemenu_icon"
        android:layout_marginRight="@dimen/margin_top"
        android:visibility="gone" />

</RelativeLayout>