<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linEmailLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_top_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgEmail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/menu_home"
            android:tint="#227AB2"
            android:src="@drawable/icon_email" />

        <com.handy.view.TextViewPlus
            android:id="@+id/txtEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_top_1"
            android:textColor="@color/title_color"
            android:text=""
            android:textSize="@dimen/margin_top_1"
            app:customFont="@string/font_regular" />
    </LinearLayout>

</LinearLayout>