            <com.handy.view.TextViewPlus
                android:id="@+id/my_profile_address_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hire_address"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/city_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/register_city"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/my_profile_city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/register_city"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/state_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/register_state"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/my_profile_state_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/register_state"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/pincode_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/register_pincode"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/my_profile_pincode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
