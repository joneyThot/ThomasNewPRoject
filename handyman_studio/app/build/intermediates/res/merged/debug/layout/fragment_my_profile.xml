                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/website_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/hire_website"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/my_profile_website_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:text="@string/hire_website"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <LinearLayout
                android:id="@+id/changestatus_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:orientation="horizontal"
                android:text="@string/hire_status"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone">

                <com.handy.view.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/hire_status"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/margin_top_1"
                    app:customFont="@string/font_regular" />

                <CheckBox
                    android:id="@+id/chkhandymanstatus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top_10"
                    android:button="@drawable/single_checkbox_choice"
                    android:text=""
                    android:textColor="@color/drak_gray"
                    android:textSize="@dimen/calender_day_textsize"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>