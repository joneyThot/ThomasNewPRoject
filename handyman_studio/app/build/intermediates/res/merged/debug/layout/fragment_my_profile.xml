<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_top_10"
        android:layout_margin="@dimen/margin_top_10"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.4"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_top_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_top_10"
                android:gravity="center">

                <ImageView
                    android:id="@+id/my_profile_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/avtar_images"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_marginLeft="@dimen/margin_top_2"
            android:padding="@dimen/margin_top_1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.handy.view.TextViewPlus
                android:id="@+id/my_name_profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                app:customFont="@string/font_regular" />


            <RatingBar
                android:id="@+id/handyman_rating"
                style="@style/CustomRatingBarXHdpi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:isIndicator="true"
                android:numStars="0"
                android:stepSize="0.01"
                android:visibility="gone" />

            <com.handy.view.TextViewPlus
                android:id="@+id/txtHandymanRates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/txtHandymanFavourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/margin_top_10"
        android:background="@color/subcategory_color"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:id="@+id/profil_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_top_10"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_top_10"
            android:paddingLeft="@dimen/margin_top_10"
            android:paddingRight="@dimen/margin_top_10">

            <com.handy.view.TextViewPlus
                android:id="@+id/mobile_number_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/hire_mobile_number"
                android:textColor="@color/title_color"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/my_profile_mobile_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/hire_mobile_number"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/gender_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/register_gender"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/my_profile_gender_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/register_gender"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/birthday_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/register_gender_birthdate"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/my_profile_birthdate_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/register_gender_birthdate"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/email_id_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/hire_email_id"
                android:textColor="@color/title_color"
                android:textSize="@dimen/margin_top_1"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/my_profile_email_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/hire_email_id"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/margin_top_18"
                android:visibility="gone"
                app:customFont="@string/font_regular" />

            <com.handy.view.TextViewPlus
                android:id="@+id/watsapp_id_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1"
                android:singleLine="true"
                android:text="@string/hire_watsapp_id"
                android:textColor="@color/title_color"
